# Environment Configuration Template
# Copy this file to .env and update with your local settings

# Application Configuration
NODE_ENV=development
PORT=3000
API_PORT=3001

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fleet_optimizer
DB_USER=postgres
DB_PASSWORD=your_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Map Configuration
LEAFLET_DEFAULT_CENTER_LAT=37.7749
LEAFLET_DEFAULT_CENTER_LNG=-122.4194
LEAFLET_DEFAULT_ZOOM=13

# External APIs (Optional)
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here
GOOGLE_MAPS_API_KEY=your_google_maps_key_here

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Performance
MAX_VEHICLES_PER_OPTIMIZATION=50
MAX_DELIVERIES_PER_OPTIMIZATION=200
OPTIMIZATION_TIMEOUT_MS=30000

# WebSocket Configuration
WS_PORT=3002
WS_HEARTBEAT_INTERVAL=30000

# Testing (for development only)
TEST_DB_NAME=fleet_optimizer_test
ENABLE_DEBUG_ROUTES=true